{
  "name": "@hy_ong/zod-kit",
  "version": "0.2.0",
  "description": "A comprehensive TypeScript library providing pre-built Zod validation schemas with full internationalization support for common data types and Taiwan-specific formats",
  "keywords": [
    "zod",
    "validation",
    "schema",
    "typescript",
    "taiwan",
    "i18n",
    "form-validation",
    "email",
    "password",
    "phone",
    "postal-code",
    "national-id",
    "business-id"
  ],
  "homepage": "https://github.com/hy-ong/zod-kit#readme",
  "bugs": {
    "url": "https://github.com/hy-ong/zod-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hy-ong/zod-kit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Ong Hoe Yuan",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "prepublishOnly": "npm test -- --run && npm run build"
  },
  "dependencies": {
    "dayjs": "^1.11.19"
  },
  "peerDependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.12",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
