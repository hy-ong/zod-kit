{
  "name": "@hy_ong/zod-kit",
  "version": "0.1.1",
  "description": "A comprehensive TypeScript library providing pre-built Zod validation schemas with full internationalization support for common data types and Taiwan-specific formats",
  "keywords": [
    "zod",
    "validation",
    "schema",
    "typescript",
    "taiwan",
    "i18n",
    "form-validation",
    "email",
    "password",
    "phone",
    "postal-code",
    "national-id",
    "business-id"
  ],
  "homepage": "https://github.com/hy-ong/zod-kit#readme",
  "bugs": {
    "url": "https://github.com/hy-ong/zod-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hy-ong/zod-kit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Ong Hoe Yuan",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest"
  },
  "dependencies": {
    "dayjs": "^1.11.14",
    "glob": "^11.0.3",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^20.19.11",
    "eslint": "^9.34.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  }
}
